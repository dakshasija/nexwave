	@Override
	public void run() {
		// TODO Auto-generated method stub

	}
}

public class AnonmousInnerClass_Learn {

	public static void main(String[] args) {

		Work work = new Work();
		Thread thread = new Thread(work);

		// ------------------------------------------

	}

}
