package com.multi.level2;

class Employee {

	public synchronized void doWork1() {
		String name = Thread.currentThread().getName();
		System.out.println(name + " work1-start...");
		try {
			Thread.sleep(5000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		System.out.println(name + " work1-end....");

	}

	public void doWork2() {
		String name = Thread.currentThread().getName();
		System.out.println(name + " work2-start...");
		System.out.println(name + " work2-end....");
	}

}

public class Sync_Instance_Method_Ex {

	public static void main(String[] args) {

		Employee employee1 = new Employee();

		Thread thread1 = new Thread(() -> {
			employee1.doWork1();
		}, "T1");

		Thread thread2 = new Thread(() -> {
			employee1.doWork1();
		}, "T2");

		Thread thread3 = new Thread(() -> {

		}, "T3");

		thread1.start();
		thread2.start();
		// thread3.start();

	}

}
